<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:skubit="http://schemas.android.com/apk/res-auto"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:scrollbars="none">

    <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        <com.skubit.comics.ExpandablePanel
                android:id="@+id/new_panel"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                skubit:animationDuration="100"
                skubit:collapsedHeight="100dip"
                skubit:content="@+id/new_text"
                skubit:handle="@+id/expand">

            <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent">

                <TextView
                        android:id="@+id/new_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="15dp"
                        android:layout_marginTop="15dp"
                        android:text="What's New"
                        android:textColor="#595959"
                        android:textSize="@dimen/text_large"/>

                <TextView
                        android:id="@+id/new_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#595959"
                        android:textSize="@dimen/text_medium"
                        android:layout_below="@id/new_label"/>

                <ImageButton
                        android:id="@id/expand"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_below="@id/new_text"
                        android:background="@drawable/navigation_expand"/>
            </RelativeLayout>


        </com.skubit.comics.ExpandablePanel>
    </LinearLayout>

</ScrollView>